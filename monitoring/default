server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    root /opt/grafana;
    index index.html index.htm;

    server_name localhost;

    location /ping {
        return 200;
    }

    location / {
        auth_basic "Restricted";
        auth_basic_user_file /opt/grafana/.htpasswd;
        try_files $uri $uri/ =404;
    }
}
