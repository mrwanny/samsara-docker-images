{
    "family": "samsara-small",
    "containerDefinitions": [
        {
            "name": "zookeeper-1",
            "image": "samsara/zookeeper",
            "cpu": 50,
            "memory": 300,
            "links": [ ],
            "portMappings": [
                {
                    "containerPort": 2181
                },
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "ZK_SERVER_ID",
                    "value": "1"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "zookeeper-1-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                },
                {
                    "sourceVolume": "zookeeper-1-data",
                    "containerPath": "/data",
                    "readOnly": false
                }
            ]
        },




        {
            "name": "kafka-1",
            "image": "samsara/kafka",
            "cpu": 100,
            "memory": 1000,
            "links": [
                "zookeeper-1:zookeeper"
            ],
            "portMappings": [
                {
                    "containerPort": 9092
                },
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "KAFKA_BROKER_ID",
                    "value": "1"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "kafka-1-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                },
                {
                    "sourceVolume": "kafka-1-data",
                    "containerPath": "/data",
                    "readOnly": false
                }
            ]
        },




        {
            "name": "ingestion",
            "image": "samsara/ingestion-api",
            "cpu": 100,
            "memory": 200,
            "links": [
                "kafka-1:kafka"
            ],
            "portMappings": [
                {
                    "containerPort": 9000
                },
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "OUTPUT_TOPIC",
                    "value": "ingestion"
                },
                {
                    "name": "TRACKING_ENABLED",
                    "value": "true"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "ingestion-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                }
            ]
        },



        {
            "name": "core",
            "image": "samsara/samsara-core",
            "cpu": 100,
            "memory": 400,
            "links": [
                "kafka-1:kafka",
                "zookeeper-1:zookeeper",
                "monitoring:riemann"
            ],
            "portMappings": [
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "INDEX_STRATEGY",
                    "value": ":single"
                },
                {
                    "name": "TRACKING_ENABLED",
                    "value": "true"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "core-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                }
            ]
        },






        {
            "name": "elasticsearch",
            "image": "samsara/elasticsearch",
            "cpu": 300,
            "memory": 800,
            "links": [
                "zookeeper-1:zookeeper"
            ],
            "portMappings": [
                {
                    "containerPort": 9200
                },
                {
                    "containerPort": 9300
                },
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "els-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                },
                {
                    "sourceVolume": "els-data",
                    "containerPath": "/data",
                    "readOnly": false
                }
            ]
        },




        {
            "name": "kibana",
            "image": "samsara/kibana",
            "cpu": 100,
            "memory": 100,
            "links": [
                "elasticsearch:elasticsearch"
            ],
            "portMappings": [
                {
                    "containerPort": 8000
                },
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "kibana-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                }
            ]
        },





        {
            "name": "qanal",
            "image": "samsara/qanal",
            "cpu": 100,
            "memory": 200,
            "links": [
                "zookeeper-1:zookeeper",
                "elasticsearch:els",
                "monitoring:riemann"
            ],
            "portMappings": [
                {
                    "containerPort": 15000
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "KAFKA_TOPIC",
                    "value": "events"
                },
                {
                    "name": "KAFKA_PARTITIONS",
                    "value": ":all"
                },
                {
                    "name": "TRACKING_ENABLED",
                    "value": "true"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "qanal-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                }
            ]
        },




        {
            "name": "monitoring",
            "image": "samsara/monitoring",
            "cpu": 100,
            "memory": 300,
            "portMappings": [
                {
                    "containerPort": 80
                },
                {
                    "containerPort": 5555
                },
                {
                    "containerPort": 5556
                },
                {
                    "containerPort": 8083
                },
                {
                    "containerPort": 8086
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "HTTP_USER",
                    "value": "admin"
                },
                {
                    "name": "HTTP_PASS",
                    "value": "samsara"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "monitoring-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                },
                {
                    "sourceVolume": "monitoring-data",
                    "containerPath": "/data",
                    "readOnly": false
                }
            ]
        },




        {
            "name": "bootstrap",
            "image": "samsara/kafka",
            "cpu": 100,
            "memory": 100,
            "links": [
                "zookeeper-1:zookeeper-1",
                "kafka-1:kafka",
                "elasticsearch:elasticsearch"
            ],
            "essential": true,
            "command": [
                "/bin/bash",
                "-c",
                "curl -sSL https://raw.githubusercontent.com/samsara/samsara-docker-images/master/bootstrap/bootstrap.sh | bash"
            ],
            "mountPoints": [
                {
                    "sourceVolume": "bootstrap-logs",
                    "containerPath": "/logs",
                    "readOnly": false
                }
            ]
        }
    ],


    "volumes": [
        {
            "name": "zookeeper-1-logs",
            "host": {
                "sourcePath": "/ecs/logs/zk1"
            }
        },
        {
            "name": "zookeeper-1-data",
            "host": {
                "sourcePath": "/ecs/data/zk1"
            }
        },
        {
            "name": "kafka-1-logs",
            "host": {
                "sourcePath": "/ecs/logs/kafka1"
            }
        },
        {
            "name": "kafka-1-data",
            "host": {
                "sourcePath": "/ecs/data/kafka1"
            }
        },
        {
            "name": "ingestion-logs",
            "host": {
                "sourcePath": "/ecs/logs/ingestion"
            }
        },
        {
            "name": "core-logs",
            "host": {
                "sourcePath": "/ecs/logs/core"
            }
        },
        {
            "name": "els-logs",
            "host": {
                "sourcePath": "/ecs/logs/els"
            }
        },
        {
            "name": "els-data",
            "host": {
                "sourcePath": "/ecs/data/els"
            }
        },
        {
            "name": "kibana-logs",
            "host": {
                "sourcePath": "/ecs/logs/kibana"
            }
        },
        {
            "name": "qanal-logs",
            "host": {
                "sourcePath": "/ecs/logs/qanal"
            }
        },
        {
            "name": "monitoring-logs",
            "host": {
                "sourcePath": "/ecs/logs/monitoring"
            }
        },
        {
            "name": "monitoring-data",
            "host": {
                "sourcePath": "/ecs/data/monitoring"
            }
        },
        {
            "name": "bootstrap-logs",
            "host": {
                "sourcePath": "/ecs/logs/bootstrap"
            }
        }
    ]
}
